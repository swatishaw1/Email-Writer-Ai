{
  "name": "Email Writer Assitant",
  "description": "Ai-Powered Email Reply Generator",
  "version": "1.0",
  "manifest_version": 3,
  "host_permissions": [
    "http://localhost:8080/*",
    "*://mail.google.com/*"
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "js": ["content.js"], 
      "matches": ["*://mail.google.com/*"],
      "css":["content.css"],
      "run_at":"document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "test1.png"],
      "matches": ["*://mail.google.com/*"]
    }
  ],
  "action": {
    "default_title": "Email Writer Assitant",
    "default_icon": "image.png"
  }
}
